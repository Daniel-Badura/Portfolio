<% layout('layouts/boilerplateWidoczki') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card" >
                <img src="<%= widoczek.image %>" class="card-img-top"
                    alt="../img/default.jpg">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= widoczek.name %>
                    </h5>
                    <p class="card-text">
                        <%= widoczek.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= widoczek.location %>
                    </li>
                    <li class="list-group-item">
                        <%= widoczek.price %> € za jedno spojrzenie
                    </li>
                    <li class="list-group-item">
                      
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/widoczki/<%= widoczek._id %>/edit">Edytuj Widoczek</a>
                    <form class="d-inline" action="/widoczki/<%=widoczek._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger ">Usuń Widoczek</button>
                    </form>
                </div>
            </div>

            
            <h2>Zostaw opinię:</h2>
            <form action="/widoczki/<%= widoczek._id %>/reviews" method="POST" novalidate class='validated-form'>
                <div class='mb-3'>
                    <label for="body" class="form-label">Rating</label>
                    <input name='review[rating]' id='rating' class='form-range'type="range" min='1' max='5'>
                </div>
                <div class='mb-3'>
                    <label for="body" class="form-label">Review</label>
                    <textarea name="review[body]" id='body' class="form-control" cols="30" rows="10" required></textarea>
                  
                </div>
        
                <button type="submit" class='btn btn-success'>Dodaj Opinię</button>
            </form>
        </div>
    </div>


